<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">
	<Dialog title="Customer Reference" resizable="true">
		<content>
			<f:SimpleForm editable="true" singleContainerFullSize="false" layout="ResponsiveGridLayout" labelSpanL="3" columnsL="4" emptySpanS="1">
				<Label text="Customer Reference"/>
				<Input id="id_PONumber" type="Text" placeholder="Please Enter Cust Reference..."/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Create" press="onProceedCreateSO"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onPODetailsCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>